rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // appUsers collection - 認証済みユーザーのみアクセス可能
    match /appUsers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // 他のユーザー情報の読み取りは可能
    }
    
    // chatChannels - 認証済みユーザーのみ
    match /chatChannels/{document} {
      allow read, write: if request.auth != null;
    }
    
    // chatMessages - 認証済みユーザーのみ
    match /chatMessages/{document} {
      allow read, write: if request.auth != null;
    }
    
    // chatUsers - 認証済みユーザーのみ
    match /chatUsers/{document} {
      allow read, write: if request.auth != null;
    }
    
    // unreadCounts - 認証済みユーザーのみ
    match /unreadCounts/{document} {
      allow read, write: if request.auth != null;
    }
    
    // その他のコレクション - 認証済みユーザーのみ
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
